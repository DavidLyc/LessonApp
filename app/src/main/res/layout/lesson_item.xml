<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_activity"
    android:paddingBottom="15dp"
    android:paddingEnd="15dp"
    android:paddingStart="12dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/lesson_item_time"
        style="@style/normal_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lesson_item_place"
        android:layout_width="wrap_content"
        style="@style/normal_TextView"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lesson_item_name"
        style="@style/normal_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lesson_item_time" />

    <TextView
        android:id="@+id/lesson_item_start2end"
        style="@style/normal_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lesson_item_name" />

    <TextView
        android:id="@+id/lesson_item_teacher"
        style="@style/normal_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/lesson_item_time" />

</RelativeLayout>